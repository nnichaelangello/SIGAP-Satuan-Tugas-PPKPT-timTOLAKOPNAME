# SIGAP PPKS - Konfigurasi Environment
# Copy file ini ke .env dan isi dengan nilai yang sesuai
# JANGAN commit file .env ke version control!

# ============================================
# APLIKASI
# ============================================
APP_ENV=development
DEBUG_MODE=true
APP_TIMEZONE=Asia/Jakarta

# ============================================
# DATABASE
# ============================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=sigap_ppks
DB_USER=root
DB_PASS=
DB_CHARSET=utf8mb4

# ============================================
# GROQ API KEYS (untuk chatbot AI)
# Dapatkan dari https://console.groq.com/
# ============================================
# API Key utama (primary)
GROQ_API_KEY=

# API Key cadangan (secondary/failover)
# Digunakan ketika primary mengalami rate limit atau error
GROQ_API_KEY_SECONDARY=

# Model default untuk chat (opsional, default: llama-3.3-70b-versatile)
GROQ_MODEL_PRIMARY=llama-3.3-70b-versatile
GROQ_MODEL_SECONDARY=llama-3.1-8b-instant

# ============================================
# CHATBOT CONFIGURATION
# ============================================
# Threshold skor untuk deteksi intent laporan (0-15)
CHATBOT_REPORT_THRESHOLD=7

# Durasi penyimpanan chat di session (hari)
CHATBOT_SESSION_RETENTION_DAYS=7

# Durasi penyimpanan log emergency (jam)
CHATBOT_EMERGENCY_RETENTION_HOURS=168

# Batas quota harian per API key
CHATBOT_DAILY_QUOTA_LIMIT=1000

# ============================================
# KEAMANAN
# ============================================
# Kunci enkripsi (minimal 32 karakter)
# Generate dengan: php -r "echo bin2hex(random_bytes(32));"
ENCRYPTION_KEY=

# Kunci enkripsi untuk chat localStorage (client-side)
# Generate dengan: php -r "echo bin2hex(random_bytes(16));"
CHAT_ENCRYPTION_KEY=

# Session (detik)
SESSION_LIFETIME=1800
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=30

# ============================================
# MAINTENANCE MODE
# ============================================
MAINTENANCE_SECRET_KEY=ganti_dengan_key_rahasia_anda

# ============================================
# CORS
# ============================================
# Development: * (izinkan semua)
# Production: domain spesifik (pisahkan dengan koma)
CORS_ALLOWED_ORIGINS=*

# ============================================
# UPLOAD
# ============================================
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp,mp4,mov,webm
MAX_FILES_PER_UPLOAD=5
